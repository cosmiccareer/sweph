# =============================================================================
# CCBBB Client Portal - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# =============================================================================
# Server Configuration
# =============================================================================
NODE_ENV=development
PORTAL_PORT=3001

# =============================================================================
# Database (PostgreSQL)
# =============================================================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=ccbbb_portal
DB_USER=postgres
DB_PASSWORD=your_secure_password

# =============================================================================
# Authentication
# =============================================================================
# JWT secret (use a long random string in production)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRY=24h
JWT_REFRESH_EXPIRY=7d

# =============================================================================
# WordPress / WooCommerce / AcademyLMS Integration
# =============================================================================
# Your WordPress site URL
WORDPRESS_URL=https://your-wordpress-site.com

# WordPress REST API credentials (for user lookup)
WORDPRESS_API_KEY=
WORDPRESS_API_SECRET=

# JWT secret if using WordPress JWT plugin (must match WordPress config)
WORDPRESS_JWT_SECRET=

# WooCommerce REST API credentials (for purchase verification)
# Generate at: WordPress Admin > WooCommerce > Settings > Advanced > REST API
WC_CONSUMER_KEY=ck_your_consumer_key
WC_CONSUMER_SECRET=cs_your_consumer_secret

# WooCommerce Product IDs for CCBBB course (comma-separated)
# Find in WooCommerce > Products > hover over product to see ID
CCBBB_PRODUCT_IDS=123,456

# AcademyLMS Course ID
# Find in WordPress Admin > Developer > Courses > hover over course
ACADEMYLMS_COURSE_ID=

# =============================================================================
# Google Drive Integration
# =============================================================================
# Option 1: Service Account Key (JSON string - escape quotes)
# Copy the entire contents of your service account JSON key file
GOOGLE_SERVICE_ACCOUNT_KEY={"type":"service_account","project_id":"...","private_key_id":"...","private_key":"-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n","client_email":"...@....iam.gserviceaccount.com",...}

# Option 2: Path to service account JSON file
# GOOGLE_SERVICE_ACCOUNT_FILE=/path/to/service-account-key.json

# Google Drive Folder IDs (get these from folder URLs)
# Example: https://drive.google.com/drive/folders/1ABC... -> 1ABC...
GOOGLE_DRIVE_FOLDER_CCBBB_MAIN=1KKMjVQR2WpAXJ4JHW3RGXHNmZTPElbM0
GOOGLE_DRIVE_FOLDER_CCBBB_V2=1TSMSN6KaVF-KcD3zhN15L0e6Lkj0mbyz

# Optional: Folder for user workspace (where copies go)
GOOGLE_DRIVE_FOLDER_WORKSPACE=

# =============================================================================
# AI / Claude API
# =============================================================================
ANTHROPIC_API_KEY=sk-ant-api...
CHAT_MODEL=claude-sonnet-4-20250514

# =============================================================================
# Astrology API
# =============================================================================
# URL to your existing /sweph astrology API
ASTROLOGY_API_URL=http://127.0.0.1:3000

# =============================================================================
# CORS Configuration
# =============================================================================
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:5173,http://localhost:3001,https://your-domain.com

# =============================================================================
# Logging
# =============================================================================
LOG_LEVEL=info
